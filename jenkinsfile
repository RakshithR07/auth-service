pipeline {	
	agent any	
	tools {	    
		maven 'my-maven'		
		jdk 'my-jdk'	
	}	
	stages {        
		stage('Clone'){			
			steps {git url:'https://github.com/RakshithR07/authentication-service.git', branch:'main'}			
			}		
		stage('Build'){			
			steps {sh "mvn clean install -DskipTests"}		
		}		
		stage('PreDeploy'){			
			steps { sh "docker rmi -f auth-image ."			    
			            sh "docker rm -f auth-service"}	
		}
		stage('Deploy') {			
			steps { sh "docker build -t auth-image ."			    
			            sh "docker run -p 6090:8090 -d --name auth-service auth-image"}		
		}		
	}
}